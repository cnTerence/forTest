var ajax = {

  httpVer : [
	  "MSXML2.XMLHTTP.7.0",
	  "MSXML2.XMLHTTP.6.0",
	  "MSXML2.XMLHTTP.5.0",
	  "MSXML2.XMLHTTP.4.0",
	  "MSXML2.XMLHTTP.3.0",
	  "MSXML2.XMLHTTP",
    "Microsoft.XMLHTTP"
  ],
  
  httpPool : [],
  
  getHttpInstance : function(){
	  var len = httpPool.length;
	  var rdyStt = null;
	
	  for(var l = 0; l < len; l++){
	    http = httpPool[l];
	    if(0 == http.readyState || 4 == http.readyState){
	      return http;
	    }
	  }
	
	  var http = createHttp();
	  httpPool[httpPool.length] = http;
	  return http;
  },
  
  createHttp : function(){
    if(window.XMLHttpRequest){
      return new window.XMLHttpRequest();
    
    }else if(window.ActiveXObject){
      var http = null;
      var len = httpVer.length;
  
      for(var l = 0; l < len && !http; l++){
        try{
          http = new ActiveXObject(httpVer[l]);
        }catch(ex){
          //do nothing
        }
      }
  
      if(!http){
        alert("browser does not support ActiveXObject.");
        return null;
      }
    
    }else{
      alert("browser does not support either XMLHttpRequest or ActiveXObject.");
      return null;
    }
  },
  
  sendHttp : function(url, scsCall, method, isAnsyc, paramAry, failCall){
    var http = getHttpInstance();
    method = method ? method : "get";
    isAnsyc = isAnsyc ? isAnsyc : false;
    
    http.open(method, url, isAnsyc);
    http.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
    http.onreadystatechange = function(){
      if(4 == http.readyState){
        if(200 == http.readyState){
          scsCall(http);
        }else{
          if(failCall){
            failCall(http);
          }else{
            alert("Error: HTTP " + http.status + " " + http.statusText);
          }
        }
      }
    };
    
    var param = "";
    if(paramAry && paramAry.length > 0){
      var len = paramAry.length;
      for(var l = 0; l < len; l++){
        if(l > 0){
          param += "&";
        }
        param += paramAry[l][0] + "=" + paramAry[l][1];
      }
    }
    
    http.send(param);
  }
  
};
